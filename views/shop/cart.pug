extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content
    if cart.length > 0
        each cartItem in cart
            ul
                li 
                    p #{cartItem.product.title} -- #{cartItem.qty}
                    form(action="/delete-item-cart", method="post")
                        button.btn(type="submit") Delete
                        input(type="hidden", name="deleteId", value=cartItem.product.id)
            hr
        p Total Price = #{totalPrice}
    else    
        h1 Cart is empty!!